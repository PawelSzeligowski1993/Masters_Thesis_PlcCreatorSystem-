@model PlcCreatorSystem_WEB.Models.VM.HmiUpdateVM

<form asp-action="UpdateHmi">
    <br />
    <div class="container border p-3">
        <h1 class="text-primaey">Update Hmi</h1>
        <hr />

        <input hidden asp-for="hmiUpdateVM.Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="hmiUpdateVM.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hmiUpdateVM.Name" class="form-control" />
                <span asp-validation-for="hmiUpdateVM.Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmiUpdateVM.IP" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hmiUpdateVM.IP" class="form-control" />
                <span asp-validation-for="hmiUpdateVM.IP" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmiUpdateVM.Identyfier" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hmiUpdateVM.Identyfier" class="form-control" />
                <span asp-validation-for="hmiUpdateVM.Identyfier" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmiUpdateVM.Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10  pb-3">
                <textarea asp-for="hmiUpdateVM.Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="hmiUpdateVM.Details" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmiUpdateVM.UserID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="hmiUpdateVM.UserID" class="form-select" asp-items="@Model.usersList">
                    <option disabled selected>--Select User--</option>
                </select>
                <span asp-validation-for="hmiUpdateVM.UserID" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexHmi" asp-controller="Hmi" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success from-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}