@model PlcCreatorSystem_WEB.Models.VM.HmiCreateVM
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpAcc
@{
    var user = httpAcc.HttpContext.User;
}

<form asp-action="CreateHmi">
    <br />
    <div class="container border p-3">
        <h1 class="text-primaey">Create Hmi</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-dnager"></div>

            <div class="col-2">
                <label asp-for="hmicreateVM.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hmicreateVM.Name" class="form-control" />
                <span asp-validation-for="hmicreateVM.Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmicreateVM.IP" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hmicreateVM.IP" class="form-control" />
                <span asp-validation-for="hmicreateVM.IP" class="text-danger"></span>
            </div>
             
            <div class="col-2">
                <label asp-for="hmicreateVM.Identyfier" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="hmicreateVM.Identyfier" class="form-control" />
                <span asp-validation-for="hmicreateVM.Identyfier" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmicreateVM.Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10  pb-3">
                <textarea asp-for="hmicreateVM.Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="hmicreateVM.Details" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="hmicreateVM.UserID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="hmicreateVM.UserID" class="form-select" asp-items="@Model.usersList">
                    <option disabled selected>--Select User--</option>
                </select>
                <span asp-validation-for="hmicreateVM.UserID" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexHmi" asp-controller="HMI" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success from-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}