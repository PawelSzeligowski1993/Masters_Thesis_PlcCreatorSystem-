@model PlcCreatorSystem_WEB.Models.VM.ProjectDeleteVM

<form asp-action="DeleteProject">
    <br />
    <div class="container border p-3">
        <h1 class="text-primaey">Delete Project</h1>
        <hr />

        <input hidden asp-for="project.Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="project.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="project.Name" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="project.PlcID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="project.PlcID" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="project.HmiID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="project.HmiID" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="project.CustomerDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="project.CustomerDetails" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="project.Status" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="project.Status" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexProject" asp-controller="Project" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success from-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
