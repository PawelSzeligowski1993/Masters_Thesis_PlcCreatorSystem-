@using static PlcCreatorSystem_Utility.SD;
@model PlcCreatorSystem_WEB.Models.VM.UserUpdateVM

<form asp-action="UpdateUser">
    <br />
    <div class="container border p-3">
        <h1 class="text-primaey">Update User</h1>
        <hr />

        <input hidden asp-for="userVM.Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-dnager"></div>

            <div class="col-2">
                <label asp-for="userVM.UserName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="userVM.UserName" class="form-control" />
                <span asp-validation-for="userVM.UserName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="userVM.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="userVM.Name" class="form-control" />
                <span asp-validation-for="userVM.Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="userVM.Password" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="userVM.Password" class="form-control" />
                <span asp-validation-for="userVM.Password" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="userVM.Role" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="userVM.Role" class="form-select" asp-items="@Model.RoleOptions">
                    <option disabled selected>-- Select Role --</option>
                </select>
                <span asp-validation-for="userVM.Role" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexUser" asp-controller="Auth" class="btn-primary btn form-control">Back to Users List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success from-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
